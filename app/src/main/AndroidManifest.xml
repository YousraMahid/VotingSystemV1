<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.votingsystemv1">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/vote"
        android:label="@string/app_name"
        android:roundIcon="@drawable/vote"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="Home"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".Fragments.Intro"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".Activities.SigninActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.SignupActivity" />
        <activity android:name=".Activities.PollActivity" />
        <activity android:name=".Activities.ConfirmProfileActivity" />
        <activity
            android:name=".Activities.SettingActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".Activities.AboutActivity" />
        <activity android:name=".Activities.FeedbackActivity" />
    </application>

</manifest>